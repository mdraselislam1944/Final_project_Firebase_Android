<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">

    <DigitalClock
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

    <!-- Horizontal LinearLayout for the buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="Home"
            android:id="@+id/HomeId"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="Add"
            android:id="@+id/AddActivityId"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" />
        <Button
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="Show"
            android:id="@+id/ShowActivityId"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" />
        <Button
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="LogOut"
            android:id="@+id/LogOutId"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="setAlarm"
            android:id="@+id/AddAlarmId"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" />
        <Button
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="Update Alarm"
            android:id="@+id/UpdateId"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" />
        <Button
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="delete Alarm"
            android:id="@+id/DeleteAlarmId"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
